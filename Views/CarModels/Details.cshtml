@model CarSale.Models.CarModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Engine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Engine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(car => car.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(car => car.CarImage)
        </dt>
        <dd class="col-sm-2">
            <img src="~/images/@Html.DisplayFor(model =>model.CarImage)"
                 width="120" 
                 asp-append-version="true" />
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
